<div class="container">
  <div class="text-center">
    <h2><%= @booking.service.name %></h2>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs12 col-sm-6">
        <h3>Booking Status: <%= @booking.order_status %></h3>
          <ul class="list-unstyled">
            <li>Category: <%= @booking.service.category %></li>
            <li>Booking Start Date: <%= @booking.start_date %></li>
            <li>Booking End Date: <%= @booking.end_date %></li>
            <li>Daily Rate: £<%= @booking.service.daily_rate %></li>
            <li>Days: <%= (@booking.end_date - @booking.start_date).to_i %></li>
            <li>Total: £<%= @booking.total_cost %></li>
          </ul>
      </div>
      <div class="col-xs-12 col-sm-6">
      <h3>Client Details:</h3>
        <ul class="list-unstyled">
          <li>
            <%= @booking.user.first_name %>
            <%= @booking.user.last_name %>
          </li>
          <li><%= @booking.user.email %></li>
          <li><%= @booking.user.phone_number %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container text-center">
    <%= link_to 'View all my bookings', vendor_bookings_path, class:"btn btn-primary" %>
    <%= link_to 'Modify This Booking', edit_booking_path(@booking), class:"btn btn-info" %>
  </div>
</div>




