<div class="container">
  <div class="box">
    <div class="text-center">
      <h1><%= @service.name %></h1>
    </div>
    <div class="text-center">
      <%= image_tag "http://via.placeholder.com/400x300" %>
    </div>
    <div class="row">
      <div class="col-xs-6 col-sm-3 col-sm-offset-3">
        <p>Description:</p>
      </div>
      <div class="col-xs-6">
        <p><%= @service.description %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-sm-3 col-sm-offset-3">
        <p>Daily Rate:</p>
      </div>
      <div class="col-xs-6">
        <p><%= @service.daily_rate %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-sm-3 col-sm-offset-3">
        <p>Status:</p>
      </div>
      <div class="col-xs-6">
        <p><%= @service_active %></p>
      </div>
    </div>
  </div>
</div>

<div class="text-center">
  <%= link_to "Edit", edit_vendor_service_path(@service), class: "btn btn-danger" %>
<%= link_to "Back to my services", vendor_services_path, class: "btn btn-success" %>
</div>

