<div class="container">
  <div class="container" id="nav-links">
    <h2>
        <%= link_to 'Home', root_path %>
        >
        Vendor
        >
        <%= link_to 'My Services', vendor_services_path %>
        >
        <u>Viewing A Service</u>
    </h2>
  </div>
  <div class="box">
    <div class="text-center">
      <h1><%= @service.name %></h1>
    </div>
    <div class="text-center">
      <% if @service.photos %>
        <% @service.photos.each do |photo| %>
          <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
        <% end %>
      <% else %>
        <%= image_tag "https://unsplash.it/300/200" %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-6 col-sm-3 col-sm-offset-3">
        <p>Description:</p>
      </div>
      <div class="col-xs-6">
        <p><%= @service.description %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-sm-3 col-sm-offset-3">
        <p>Daily Rate:</p>
      </div>
      <div class="col-xs-6">
        <p><%= @service.daily_rate %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-sm-3 col-sm-offset-3">
        <p>Status:</p>
      </div>
      <div class="col-xs-6">
        <p><%= @service_active %></p>
      </div>
    </div>
  </div>
</div>

<div class="text-center">
  <%= link_to "Edit", edit_vendor_service_path(@service), class: "btn btn-danger" %>
<%= link_to "Back to my services", vendor_services_path, class: "btn btn-success" %>
</div>

