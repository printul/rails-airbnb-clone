<div class="container padded">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for service, url: url, method: method do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :daily_rate %>
        <%= f.input :category, collection: ["Filming", "Editing", "Both"], prompt: "(Select a category)" %>
        <%= f.input :is_active %>
        <%= f.submit class: "btn btn-warning center-block" %>
      <% end %>
    </div>
  </div>
</div>

