<div class="row" id="nav-links">
  <div class="col-xs-12 col-xs-offset-2">
    <h2>
      <%= link_to 'Home', root_path %>
      >
      <u>Services</u>
    </h2>
  </div>
</div>

<h1 class="text-center">List of services</h1>
<div class="container">
    <div class="row">
      <div class="sm-col-4 sm-col-offset-4">
        <% @services.each do |service| %>
            <%= link_to service_path(service), class: 'product-card-link' do %>
              <div class="product">
                <%= cl_image_tag service.photos.first.path, height: 100, width: 150, class: "product-image" %>
                <div class="product-description">
                  <h4><%= service.name %></h4>
                  <p><%= service.description %></p>
                </div>
                <ul class="list-inline product-controls">
                  <li>
                  <h4>Â£<%= number_with_precision(service.daily_rate, precision: 2) %> per day</h4>
                  </li>
                </ul>
              </div>
            <% end %>
        <% end %>
      </div>
    </div>
</div>




