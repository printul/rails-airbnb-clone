<h1 class="text-center">List of services</h1>
<div class="container">
    <div class="row">
      <div class="sm-col-4 sm-col-offset-4">
        <% @services.each do |service| %>
            <%= link_to service_path(service), class: 'product-card-link' do %>
              <div class="product">
                <%= cl_image_tag service.photo.path, height: 80, class: "product-image" %>
                <div class="product-description">
                  <h3><%= service.name %></h3>
                  <p><%= service.description %></p>
                </div>
                <ul class="list-inline product-controls">
                  <li>
                  <h4>Â£<%= number_with_precision(service.daily_rate, precision: 2) %> per day</h4>
                  </li>
                </ul>
              </div>
            <% end %>
        <% end %>
      </div>
    </div>
</div>

<div class="container">
  <div class="row">
    <%= link_to "Create a new service", new_vendor_service_path(@service), class: "btn btn-primary btn-lg" %>
  </div>
</div>




